{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "go@latest",
    "postgresql@latest",
    "goose@latest",
    "sqlc@latest"
  ],
  "env": {
    "DATABASE_URL": "postgres://tech_user:password@localhost:5433/tech_store_dev?sslmode=disable",
