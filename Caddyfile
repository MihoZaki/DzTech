ycinformatique.com {
    encode zstd gzip
    
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    @website {
        not path /api/* /admin* /health
    }
    reverse_proxy @website website:80 {
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        header_up X-Forwarded-For {remote_host}
    }

    @api path /api/*
    reverse_proxy @api backend:8080 {
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        header_up X-Forwarded-For {remote_host}
    }

    @dashboard path /admin*
    reverse_proxy @dashboard dashboard:80 {
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        header_up X-Forwarded-For {remote_host}
    }

    @health path /health
    reverse_proxy @health backend:8080 {
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        header_up X-Forwarded-For {remote_host}
    }
    @images path *.jpg *.jpeg *.png *.gif *.webp
    header @images Cache-Control "public, max-age=31536000, immutable"

}

www.ycinformatique.com {
    redir https://ycinformatique.com{uri}
}
